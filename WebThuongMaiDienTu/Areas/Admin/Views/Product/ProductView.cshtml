
@{
    ViewBag.Title = "Product View";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="border p-3" id="form-detail">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách Sản phẩm</h6>
        </div>
        <div class="card-body">
            <div id="grid_ListAll_Product"></div>
        </div>
        <div id="editDetails"></div>
        <div id="deleteDetails"></div>
    </div>
</div>
@* Div thông tin *@
<div id="form-info">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thêm nhân viên mới</h6>
        </div>
        <div class="form" id="form">
            <div class="card-body">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputEmail4">
                            Mã Nhân viên:
                            <i class="fas fa-exclamation-circle" id="checkErrorImageID"></i>
                            <small id="checkErrorMessageID"></small>
                        </label>
                        <input class="form-control" id="txtEmployeeID" placeholder="Mã nhân viên">
                    </div>
                    <div class="form--group col-md-4">
                        <label for="inputPassword4">
                            Họ và Tên:
                            <i class="fas fa-exclamation-circle" id="checkErrorImageName"></i>
                            <small id="checkErrorMessageName"></small>
                        </label>
                        <input class="form-control" id="txtFullName" placeholder="Họ và tên">

                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputPassword4">
                            Email:
                            <i class="fas fa-exclamation-circle" id="checkErrorImageEmail"></i>
                            <small id="checkErrorMessageEmail"></small>
                        </label>
                        <input type="email" class="form-control" id="txtEmail" placeholder="Nhập email">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="">
                            CMND:
                            <i class="fas fa-exclamation-circle" id="checkErrorImageCitizenID"></i>
                            <small id="checkErrorMessageCitizenID"></small>
                        </label>
                        <input class="form-control" id="txtCitizenID" placeholder="Nhập CMND">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="">Số điện thoại</label>
                        <input class="form-control" id="txtPhoneNumber" placeholder="Nhập số điện thoại">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="">Ngày sinh: </label>

                        <input class="form-control" id="dpkBirthDay" placeholder="Nhập số điện thoại" style="width:100%">
                    </div>
                </div>
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Địa chỉ liên lạc</h6>
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputProvince">Tỉnh/TP:</label>
                            <select id="inputProvince" class="form-control" style="width:100%">
                                <option selected>Chọn tỉnh thành phố: </option>

                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputDistrict">Quận/huyện</label>
                            <select id="inputDistrict" class="form-control" style="width:100%">
                                <option selected>Chọn quận huyện: </option>

                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputWard">Phường xã</label>
                            <select id="inputWard" class="form-control" style="width:100%">
                                <option selected>Chọn phường xã: </option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Số nhà:</label>
                            <input class="form-control" id="inputHouseNumber" placeholder="Số nhà">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Tên đường:</label>
                            <input class="form-control" id="inputRoadName" placeholder="Tên đường">
                        </div>
                    </div>
                </div>

                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quê quán</h6>
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="">Tỉnh/TP:</label>
                            <select id="homeTownProvince" class="form-control" style="width:100%">
                                <option selected>Chọn tỉnh thành phố: </option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="">Quận/huyện</label>
                            <select id="homeTownDistrict" class="form-control" style="width:100%">
                                <option selected>Chọn quận huyện: </option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="">Phường xã</label>
                            <select id="homeTownWard" class="form-control" style="width:100%">
                                <option selected>Chọn phường xã: </option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="">Số nhà:</label>
                            <input class="form-control" id="txtHHouseNumber" placeholder="Số nhà">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Tên đường:</label>
                            <input class="form-control" id="txtHRoadName" placeholder="Tên đường">
                        </div>
                    </div>
                </div>
                <hr />
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
                    Đăng ký
                </button>
                <button onclick="BackSearch()" class="btn btn-danger">Quay lại</button>
            </div>
        </div>
    </div>
</div>
@* Xoá *@
<script type="text/x-kendo-template" id="templateDelete">
    <div id="details-container">
        <label>Bạn có chắc muốn xoá sản phẩm có mã là: #= ID# và tên: #= Name #?</label>
        <hr />
        <button onclick="Delete(2,0)" class="btn btn-secondary">Huỷ</button>
        <button onclick="Delete(1, #=ID#)" class="btn btn-danger">Xoá</button>
    </div>
</script>
<script src="~/Areas/Admin/Style/Admin/vendor/jquery/jquery.min.js"></script>
<script src="~/Areas/Admin/Scripts/ProductJS.js"></script>