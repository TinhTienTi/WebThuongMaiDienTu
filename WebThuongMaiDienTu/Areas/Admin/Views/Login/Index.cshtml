
@{
    Layout = null;
}


@model  WebThuongMaiDienTu.Areas.Admin.Models.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Đăng Nhập Vào Trang Chủ</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Areas/Admin/Style/Login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link href="~/Areas/Admin/Style/Login/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Areas/Admin/Style/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Style/Login/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Style/Login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Style/Login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Style/Login/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Style/Login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Style/Login/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Style/Login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Style/Login/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('/Areas/Admin/Style/Login/images/bg-01.jpg');">
            <div class="wrap-login100">
                <div class="login100-form validate-form">
                    <span class="login100-form-logo">
                        <i class="zmdi zmdi-landscape"></i>
                    </span>

                    <span class="login100-form-title p-b-34 p-t-27">
                        Log in
                    </span>
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                        <div class="wrap-input100 validate-input" data-validate="Enter username">
                            @Html.TextBoxFor(model => model.Username, new { @class = "input100", @type = "text", @name = "username", @placeholder = "Username" })
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Enter password">
                            @Html.TextBoxFor(model => model.Password, new { @class = "input100", @type = "password", @name = "pass", @placeholder = "Password" })
                            <span class="focus-input100" data-placeholder="&#xf191;"></span>
                        </div>

                        <div class="contact100-form-checkbox">
                            @Html.CheckBoxFor(model => model.RememberMe)
                            Remember me
                        </div>

                        <div class="container-login100-form-btn">
                            <button type="submit" value="Submit" class="login100-form-btn">Login</button>
                        </div>
                    }

                    <div class="text-center p-t-90">
                        <a class="txt1" href="~/Areas/Admin/Style/Login/#">
                            Forgot Password?
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>


   

    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Style/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Style/Login/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Style/Login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Areas/Admin/Style/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Style/Login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Style/Login/vendor/daterangepicker/daterangepicker.js"></script>
    <script src="~/Areas/Admin/Style/Login/vendor/daterangepicker/moment.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Style/Login/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Style/Login/js/main.js"></script>
</body>
</html>
